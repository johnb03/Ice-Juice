---
import { Image } from "astro:assets";
import { ViewTransitions } from "astro:transitions";

import pearMintImage from "../Images/pear-mint.png";

import Buttonbuy from "../components/Buttonbuy.astro";
import ButtonProductNext from "../components/buttonProductNext.astro";

import "@fontsource/poppins/200.css";
import "@fontsource/poppins/300.css";
import "@fontsource/poppins/400.css";
import "@fontsource/poppins/500.css";
import "@fontsource/poppins/600.css";
import "../styles/global.css";

import Navbar from "../components/Nav.astro";

import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <link
      href="https://cdn.boxicons.com/fonts/basic/boxicons.min.css"
      rel="stylesheet"
    />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body
    class="bg-gradient-to-r from-palette-1-dark-green
		 via-palette-1-medium-green to-palette-4-medium-green"
  >
    <!-- navbar -->
    <nav class="">
      <Navbar />
    </nav>

    <main class="container">
      <!-- hero -->
      <section id="product_pear-mint">
        <div
          class="grid grid-cols-1 w-screen sm:grid-cols-3 text-palette-2-white-smooth p-6 text-shadow"
        >
          <div class="max-w-sm mx-auto mb-5">
            <h1 class="text-4xl">Pear Mint</h1>
            <br />
            <p class="text-sm">
              A juicy burst of ripe pear flavor meets a crisp, fresh mint. The
              result is a smooth, sweet, and refreshingly clean vaping
              experience. A light and vibrant flavor that will truly surprise
              you.
            </p>
            <br />
            <p class="text-sm">
              Savor the authenticity of a freshly picked pear, enhanced by a
              minty note that elevates the profile. It's the perfect balance
              between fruity and refreshing, crafted for an all-day vape that
              never gets old.
            </p>
          </div>

          <div
            class="product-image-container relative mx-auto flex justify-center items-center w-[300px] h-[350px]"
          >
            <Image
              id="pearmint-image"
              class="w-full h-auto object-contain drop-shadow-xl"
              src={pearMintImage}
              alt="pear mint"
            />
          </div>

          <div class="max-w-sm mx-auto mb-5">
            <h2 class="text-2xl">This e-liquid</h2>
            <br />
            <p class="text-sm">
              is crafted with premium ingredients, ensuring a pure and
              consistent flavor with every puff. Itâ€™s the perfect choice for
              those who want a fruity flavor with a fresh twist that stands out
              from the crowd.
            </p>
            <br />
            <div id="icon_descripcion ">
              <div class="w-20 h-20 flex flex-col gap-2">
                <div class="gap-2">
                  <span
                    class="inline-flex items-center justify-center w-9 h-9 bg-palette-2-white-smooth rounded"
                    ><i
                      class="bx bx-pear"
                      style="color:#000000; font-size: 1.75rem;"></i>
                  </span>
                  <span
                    class="inline-flex items-center justify-center w-9 h-9 bg-palette-2-white-smooth rounded"
                    ><i
                      class="bx bx-shield"
                      style="color:#000000; font-size: 1.75rem;"></i>
                  </span>
                </div>

                <div>
                  <span
                    class="inline-flex items-center justify-center w-9 h-9 bg-palette-2-white-smooth rounded"
                    ><i
                      class="bx bx-air"
                      style="color:#000000; font-size:1.75rem;"></i>
                  </span>
                  <span
                    class="inline-flex items-center justify-center w-9 h-9 bg-palette-2-white-smooth rounded"
                    ><i
                      class="bx bx-leaf"
                      style="color:#000000; font-size:1.75rem;"></i>
                  </span>
                </div>
              </div>
            </div>
          </div>
          <div class="max-w-sm mx-auto mb-5">
            <Buttonbuy text="Buy Now" />
          </div>
          <ButtonProductNext prevUrl="/ProductsPear" nextUrl="/ProductsPinaC" />
        </div>
      </section>
      <!-- footer -->
      <section>
        <Footer />
      </section>
    </main>
  </body>
</html>

<style>
  .product-image-container::before {
    content: "";
    position: absolute;
    /* Make the glow larger than the container to allow smooth fading */
    width: 150%;
    height: 120%;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: radial-gradient(
      circle,
      rgba(183, 238, 82, 0.4),
      transparent 60%
    );
    /* Place the glow behind the image */
    z-index: -1;
  }
</style>
