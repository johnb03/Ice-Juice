---
import { Image } from "astro:assets";
import { ViewTransitions } from "astro:transitions";
import Buttonbuy from "../components/Buttonbuy.astro";
import ButtonProductNext from "../components/buttonProductNext.astro";
import Mintimage from "../Images/mint.png";

import "@fontsource/poppins/200.css";
import "@fontsource/poppins/300.css";
import "@fontsource/poppins/400.css";
import "@fontsource/poppins/500.css";
import "@fontsource/poppins/600.css";
import "../styles/global.css";

import Navbar from "../components/Nav.astro";

import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <link
      href="https://cdn.boxicons.com/fonts/basic/boxicons.min.css"
      rel="stylesheet"
    />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="bg-gradient-to-r from-red-700
		 via-red-600 to-red-500">
    <!-- navbar -->
    <nav>
      <Navbar />
    </nav>

    <main class="container">
      <!-- hero -->
      <section id="product_pear-mint">
        <div
          class="grid grid-cols-1 w-screen sm:grid-cols-3 p-6 text-palette-2-white-smooth text-shadow"
        >
          <div class="max-w-sm mx-auto mb-5">
            <h1 class="text-4xl">Mint</h1>
            <br />
            <p class="text-sm">
              Crisp and cooling with an invigorating kick. Our pure peppermint
              delivers an icy freshness that awakens your senses with every
              puff.
            </p>
            <br />
            <p class="text-sm">
              This flavor gives you a clean, refreshing experience, perfect for
              menthol lovers. It's a revitalizing sensation that stimulates the
              palate and leaves a fresh, lasting note.
            </p>
          </div>

          <div
            class="product-image-container relative mx-auto flex justify-center items-center w-[300px] h-[350px]"
          >
            <Image
              class="w-80 h-auto drop-shadow-xl"
              src={Mintimage}
              alt="pear mint"
            />
          </div>

          <div class="max-w-sm mx-auto mb-5 text-shadow">
            <h2 class="text-2xl text-palette-2-white-smooth">This e-liquid</h2>
            <br />
            <p class="text-sm">
              An essential flavor for any vape shop. The classic and pure
              profile of peppermint attracts a wide customer base. With its
              unmatched freshness, this high-demand e-liquid is a sure-fire
              addition to your inventory.
            </p>
            <br />
            <div id="icon_descripcion ">
              <div class="w-20 h-20 flex flex-col gap-2">
                <div class="">
                  <span
                    class="inline-flex items-center justify-center w-9 h-9 bg-palette-2-white-smooth rounded"
                    ><i
                      class="bx bx-sapling"
                      style="color:#000000; font-size: 1.75rem"></i>
                  </span>
                  <span
                    class="inline-flex items-center justify-center w-9 h-9 bg-palette-2-white-smooth rounded"
                    ><i
                      class="bx bx-shield"
                      style="color:#000000; font-size: 1.75rem;"></i>
                  </span>
                </div>

                <div class="">
                  <span
                    class="inline-flex items-center justify-center w-9 h-9 bg-palette-2-white-smooth rounded"
                    ><i
                      class="bx bx-air"
                      style="color:#000000; font-size:1.75rem;"></i>
                  </span>
                  <span
                    class="inline-flex items-center justify-center w-9 h-9 bg-palette-2-white-smooth rounded"
                    ><i
                      class="bx bx-honey"
                      style="color:#000000; font-size:1.75rem;"></i>
                  </span>
                </div>
              </div>
            </div>
          </div>

          <div class="max-w-sm mx-auto mb-5">
            <Buttonbuy text="Buy Now" />
          </div>
          <ButtonProductNext prevUrl="/ProductsPinaC" nextUrl="/ProductsPear" />
        </div>
        <!-- footer -->
      </section>
      <section>
        <Footer />
      </section>
    </main>
  </body>
</html>

<style>
  .product-image-container::before {
    content: "";
    position: absolute;
    /* Make the glow larger than the container to allow smooth fading */
    width: 100%;
    height: 120%;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: radial-gradient(
      circle,
      rgba(183, 238, 82, 0.4),
      transparent 60%
    );
    /* Place the glow behind the image */
    z-index: -1;
  }
</style>
