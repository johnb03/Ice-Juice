---
import "@fontsource/poppins/200.css";
import "@fontsource/poppins/300.css";
import "@fontsource/poppins/400.css";
import "@fontsource/poppins/500.css";
import "@fontsource/poppins/600.css";
import "../styles/global.css";

import Navbar from "../components/Nav.astro";

import Footer from "../components/Footer.astro";
import { ViewTransitions } from "astro:transitions";
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <link
            href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
            rel="stylesheet"
        />
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <ViewTransitions />
        <title>{title}</title>
    </head>
    <body
        class="bg-gradient-to-r from-palette-1-dark-green
		 via-palette-1-olive-green to-palette-4-medium-green"
    >
        <!-- navba -->
        <nav class="">
            <Navbar />
        </nav>

        <main>
            <section id="hero">
                <div
                    class="h-96 w-1/2 mx-auto flex flex-col justify-center items-center pt-6 p-3 text-palette-2-white-smooth"
                >
                    <h2 class="text-bold text text-xl md:text-2xl font-bold">
                        Privacy Policy
                    </h2>
                    <p class="underline decoration-1 text-center p-2">
                        Your privacy is important to us. When you email us, we
                        only use your address to reply to your inquiry. We do
                        not collect or store any additional personal data and
                        will never share your information with third parties.
                    </p>
                </div>
            </section>
        </main>

        <section>
            <Footer />
        </section>
    </body>
</html>
