---
import { Image } from "astro:assets";
import Pearmint from "../Images/pear-mint.png";
import "@fontsource/poppins/200.css";
import "@fontsource/poppins/300.css";
import "@fontsource/poppins/400.css";
import "@fontsource/poppins/500.css";
import "@fontsource/poppins/600.css";
import "../styles/global.css";
import CardProducts from "../components/CardProducts.astro";
import Button from "../components/ButtonAction.astro";
import Navbar from "../components/Nav.astro";
import CardReviews from "../components/CardReview.astro";
import Footer from "../components/Footer.astro";
import { ViewTransitions } from "astro:transitions";
import GsapAnimation from "../components/GsapAnimation.astro";
import Faq from "../components/Faq.astro";
import ScrollToTop from "../components/ScrollToTop.astro";
import AgeVerification from "../components/AgeVerification.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<link
			href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
			rel="stylesheet"
		/>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link
			rel="apple-touch-icon"
			sizes="180x180"
			href="/apple-touch-icon.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="32x32"
			href="/favicon-32x32.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="16x16"
			href="/favicon-16x16.png"
		/>
		<link rel="manifest" href="/site.webmanifest" />
		<meta name="generator" content={Astro.generator} />
		<ViewTransitions />
		<title>{title}</title>
	</head>
	<body
		class="bg-gradient-to-r from-palette-1-dark-green
		 via-palette-1-olive-green to-palette-4-medium-green"
	>
		<AgeVerification />
		<header>
			<Navbar />
		</header>

		<main class="overflow-x-hidden">
			<!-- hero section -->
			<section
				id="hero"
				class="relative h-[100vh] flex flex-col items-center md:justify-center p-4 pt-12"
			>
				<div id="hero-text" class="relative z-10 md:leading-tight">
					<h1
						class="text-palette-2-white-smooth text-5xl md:text-6xl font-bold text-shadow-lg md:w-1/2"
					>
						Your Vaping Business Deserves to Thrive.
					</h1>
					<p
						class="text-palette-2-white-smooth m-2 text-xl md:text-2xl font-semibold text-shadow-md"
					>
						With Ice Juice, every puff is an unforgettable
						experience.
					</p>
				</div>

				<div id="animated-product-container" class="absolute z-20 mt-5">
					<Image
						src={Pearmint}
						alt="Pearmint animated product"
						class="w-[50vw] max-w-lg mx-auto product-animated drop-shadow-2xl translate-x-32"
					/>
				</div>

				<!-- "Fake" Title for animation -->
				<div
					id="fake-product-title"
					class="absolute bottom-24 text-palette-2-white-smooth p-3 w-full z-10"
				>
					<h2 class="text-3xl md:text-5xl font-bold">
						Elevate Your Inventory.
					</h2>
					<p
						class="text-2xl md:text-3xl font-bold text-palette-1-almost-black-green text-shadow-md"
					>
						Elevate Your Sales.
					</p>
				</div>

				<div id="hero-button" class="absolute bottom-10 z-30">
					<Button text="Request a Quote" href="/wholesale" />
				</div>
			</section>

			<!-- gallery products -->
			<section id="products" class="p-4 mb-3">
				<div class="container mx-auto text-center">
					<div
						id="product-title"
						class="text-palette-2-white-smooth p-3 mb-8 md:w-1/2"
					>
						<p
							class="text-left text-shadow-md font-semibold md:text-2xl"
						>
							Stocking Ice Juice isnâ€™t just adding a new brand;
							it's a strategic move.
						</p>
					</div>
					<div
						id="product-copy"
						class="text-palette-2-white-smooth text-left mb-8 md:w-1/2"
					>
						<p class="p-3 md:text-xl">
							Our premium e-liquids are crafted with a passion for
							flavor and a commitment to quality that your
							customers will taste in every puff.
						</p>
					</div>

					<div id="panel-product">
						<CardProducts />
					</div>
				</div>
			</section>

			<!-- section reviews -->
			<section
				id="review"
				class="w-full bg-gradient-to-t from-[rgb(153,154,154,20)] to-[rgb(118,155,50,0.15)] flex flex-col gap-4 py-8"
			>
				<div class="container mx-auto text-center">
					<div
						id="review-titles"
						class="p-4 flex flex-col gap-4 items-center"
					>
						<h2
							class="text-palette-2-white-smooth text-xl font-bold"
						>
							What Our Customers Are Saying
						</h2>
						<p class="text-md max-w-prose">
							Read what thousands of satisfied vapers have to say
							about their Ice Juice experience.
						</p>
						<Button
							href="/wholesale"
							text="Inquire About Wholesale"
						/>
					</div>

					<div id="cardReview">
						<CardReviews />
					</div>
				</div>
			</section>

			<!-- Call to Action Section -->
			<section
				id="cta"
				class="py-12 text-center bg-palette-3-medium-gray"
			>
				<div class="container mx-auto px-4">
					<h2
						class="text-3xl font-bold text-yellow-300 text-shadow mb-4"
					>
						Ready to Elevate Your Sales?
					</h2>
					<p
						class="max-w-2xl mx-auto mb-6 text-palette-2-almost-black-green"
					>
						Join a growing network of successful distributors who
						have seen their profits soar with Ice Juice. We provide
						marketing support, exclusive flavors, and a partnership
						you can count on.
					</p>
					<Button href="/wholesale" text="Become a Distributor" />
				</div>
			</section>

			<!-- FAQ Section -->
			<!-- <section id="faq" class="py-16 text-center">
				<div class="container mx-auto px-4">
					<h2 class="text-3xl font-bold text-palette-2-white-smooth mb-8">
						Frequently Asked Questions
					</h2>
					<Faq />
				</div>
			</section> -->

			<!-- footer -->
			<section id="footer">
				<Footer />
			</section>

			<slot />
		</main>
		<GsapAnimation />
		<ScrollToTop />
	</body>
</html>
