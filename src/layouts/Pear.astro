---
import { Image } from "astro:assets";
import { ViewTransitions } from "astro:transitions";

import pearImage from "../Images/pear.png";

import Buttonbuy from "../components/Buttonbuy.astro";
import ButtonProductNext from "../components/buttonProductNext.astro";

import "@fontsource/poppins/200.css";
import "@fontsource/poppins/300.css";
import "@fontsource/poppins/400.css";
import "@fontsource/poppins/500.css";
import "@fontsource/poppins/600.css";
import "../styles/global.css";

import Button from "../components/ButtonAction.astro";
import Navbar from "../components/Nav.astro";

import Footer from "../components/Footer.astro";

export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <link
            href="https://cdn.boxicons.com/fonts/basic/boxicons.min.css"
            rel="stylesheet"
        />
        <link
            href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
            rel="stylesheet"
        />
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <ViewTransitions />
    </head>
    <body class="bg-gradient-to-r from-yellow-600
		 via-yellow-500 to-yellow-400">
        <!-- navbar -->
        <nav>
            <Navbar />
        </nav>

        <main class="container">
            <!-- hero -->
            <section id="product_pear-mint   ">
                <div
                    class="grid grid-cols-1 w-screen sm:grid-cols-3 text-palette-1-almost-black-green p-6"
                >
                    <div class="max-w-sm mx-auto mb-5">
                        <h1
                            class="text-4xl text-palette-2-white-smooth text-shadow"
                        >
                            Pear
                        </h1>
                        <br />
                        <p class="text-sm">
                            Dive into a juicy burst of ripe pear flavor. An
                            incredibly smooth and sweet vaping experience, as
                            refreshingly light as biting into a freshly picked
                            fruit.
                        </p>
                        <br />
                        <p class="text-sm">
                            This e-liquid captures the pure essence of pear at
                            its perfect point. Its authentic and delicate flavor
                            is ideal for those who want a natural, uncomplicated
                            fruity experience, perfect for any time of day.
                        </p>
                    </div>

                    <div
                        class="product-image-container relative mx-auto flex justify-center items-center w-[300px] h-[350px]"
                    >
                        <Image
                            class="w-80 h-auto drop-shadow-xl"
                            src={pearImage}
                            alt="pear mint"
                        />
                    </div>

                    <div class="max-w-sm mx-auto mb-5 text-shadow">
                        <h2 class="text-2xl text-palette-2-white-smooth">
                            This e-liquid
                        </h2>
                        <br />
                        <p class="text-sm text-palette-1-black">
                            Crafted with quality in mind, our pear flavor has
                            become a favorite for its clean profile and
                            perfectly balanced sweetness. It's a must-have
                            addition to your inventory, attracting customers who
                            value purity and authenticity in every puff.
                        </p>
                        <br />
                        <div id="icon_descripcion ">
                            <div class="w-20 h-20 flex flex-col gap-2">
                                <div class="">
                                    <span
                                        class="inline-flex items-center justify-center w-9 h-9 bg-palette-2-white-smooth rounded"
                                        ><i
                                            class="bx bx-pear"
                                            style="color:#000000; font-size: 1.75rem;"
                                        ></i>
                                    </span>
                                    <span
                                        class="inline-flex items-center justify-center w-9 h-9 bg-palette-2-white-smooth rounded"
                                        ><i
                                            class="bx bx-shield"
                                            style="color:#000000; font-size: 1.75rem;"
                                        ></i>
                                    </span>
                                </div>

                                <div class="">
                                    <span
                                        class="inline-flex items-center justify-center w-9 h-9 bg-palette-2-white-smooth rounded"
                                        ><i
                                            class="bx bx-air"
                                            style="color:#000000; font-size:1.75rem;"
                                        ></i>
                                    </span>
                                    <span
                                        class="inline-flex items-center justify-center w-9 h-9 bg-palette-2-white-smooth rounded"
                                        ><i
                                            class="bx bx-leaf"
                                            style="color:#000000; font-size:1.75rem;"
                                        ></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="max-w-sm mx-auto mb-5">
                        <Buttonbuy text="Buy Now" />
                    </div>
                    <ButtonProductNext
                        prevUrl="/ProductsMint"
                        nextUrl="/ProductsPearMint"
                    />
                </div>
                <!-- footer -->
            </section>
            <section>
                <Footer />
            </section>
        </main>
    </body>
</html>

<style>
    .product-image-container::before {
        content: "";
        position: absolute;
        /* Make the glow larger than the container to allow smooth fading */
        width: 150%;
        height: 120%;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: radial-gradient(
            circle,
            rgba(183, 238, 82, 0.4),
            transparent 60%
        );
        /* Place the glow behind the image */
        z-index: -1;
    }
</style>
