<form
    class="max-w-xl mx-auto text-left space-y-6 p-3"
    action="https://formsubmit.co/d14e00a41d072740a3be69f7a8ac073d"
    method="POST"
>
    <!-- Campos para FormSubmit -->
    <!-- IMPORTANTE: Cambia "/thank-you" a la URL completa de tu sitio cuando lo despliegues -->
    <!-- Ejemplo: https://www.tusitio.com/thank-you -->
    <input type="hidden" name="_next" value="/thank-you" />
    <input type="hidden" name="_subject" value="New Inquiry from Website" />
    <input type="hidden" name="_captcha" value="true" />

    <div>
        <label
            for="name"
            class="block text-sm font-medium text-palette-2-white-smooth/90"
            >Name</label
        >
        <div class="mt-1">
            <input
                type="text"
                name="name"
                id="name"
                required
                class="block w-full px-4 py-3 bg-white/10 border-slate-500 rounded-md shadow-sm focus:ring-palette-3-electric-lime focus:border-palette-3-electric-lime text-white placeholder-gray-400"
                placeholder="John Doe"
            />
        </div>
    </div>
    <div>
        <label
            for="email"
            class="block text-sm font-medium text-palette-2-white-smooth/90"
            >Email</label
        >
        <div class="mt-1">
            <input
                id="email"
                name="email"
                type="email"
                autocomplete="email"
                required
                class="block w-full px-4 py-3 bg-white/10 border-slate-500 rounded-md shadow-sm focus:ring-palette-3-electric-lime focus:border-palette-3-electric-lime text-white placeholder-gray-400"
                placeholder="you@example.com"
            />
        </div>
    </div>
    <div>
        <label
            for="message"
            class="block text-sm font-medium text-palette-2-white-smooth/90"
            >Message</label
        >
        <div class="mt-1">
            <textarea
                id="message"
                name="message"
                rows="4"
                required
                class="block w-full px-4 py-3 bg-white/10 border-slate-500 rounded-md shadow-sm focus:ring-palette-3-electric-lime focus:border-palette-3-electric-lime text-white placeholder-gray-400"
                placeholder="Your inquiry about wholesale, feedback, or questions..."
            ></textarea>
        </div>
    </div>
    <div class="text-center">
        <button type="submit">
            <div class="svg-wrapper-1">
                <div class="svg-wrapper">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        width="24"
                        height="24"
                    >
                        <path fill="none" d="M0 0h24v24H0z"></path>
                        <path
                            fill="currentColor"
                            d="M1.946 9.315c-.522-.174-.527-.455.01-.634l19.087-6.362c.529-.176.832.12.684.638l-5.454 19.086c-.15.529-.455.547-.679.045L12 14l6-8-8 6-8.054-2.685z"
                        ></path>
                    </svg>
                </div>
            </div>
            <span>Send</span>
        </button>
    </div>
</form>

<style>
    /* Tus estilos no han cambiado */
    button {
        font-family: inherit;
        font-size: 20px;
        background: #94d46b;
        color: black;
        padding: 0.7em 1em;
        padding-left: 0.9em;
        display: flex;
        align-items: center;
        border: none;
        border-radius: 16px;
        overflow: hidden;
        transition: all 0.2s;
        cursor: pointer;
        margin: 0 auto;
    }

    button span {
        display: block;
        margin-left: 0.3em;
        transition: all 0.3s ease-in-out;
    }

    button svg {
        display: block;
        transform-origin: center center;
        transition: transform 0.3s ease-in-out;
    }

    button:hover .svg-wrapper {
        animation: fly-1 0.6s ease-in-out infinite alternate;
    }

    button:hover svg {
        transform: translateX(1.2em) rotate(45deg) scale(1.1);
    }

    button:hover span {
        transform: translateX(5em);
    }

    button:active {
        transform: scale(0.95);
    }

    @keyframes fly-1 {
        from {
            transform: translateY(0.1em);
        }

        to {
            transform: translateY(-0.1em);
        }
    }
</style>
