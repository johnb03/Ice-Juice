---
export interface Props {
  text: string;
}
const { text = "Buy Now" } = Astro.props;
---

<a
  href="#"
  class="inline-block px-8 py-4 text-lg font-bold text-center text-palette-1-almost-black-green bg-yellow-400 rounded-full shadow-md hover:bg-palette-2-almost-black-green hover:text-white transition-all duration-300 ease-in-out transform hover:scale-105"
>
  {text}
</a>
